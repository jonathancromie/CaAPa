		<Label Text="Reminders"
       VerticalOptions="Center"
       FontAttributes="Bold"
       FontSize="Large" />
		<Button HorizontalOptions = "CenterAndExpand" Text="Reminders" Command = "{Binding RemindersButtonCommand}"/>
